{
  "name": "@ntix/validate",
  "version": "0.0.0-development",
  "description": "a small validator",
  "repository": {
    "url": "https://github.com/MrAntix/validate",
    "type": "git"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "prebuild": "npm run clean",
    "build": "npm run barrels && rollup -c rollup.config.ts",
    "build.docs": "typedoc --out docs --mode file src --theme minimal --readme docs.md --media dist",
    "clean": "shx rm -rf dist",
    "barrels": "barrelsby --delete --directory src --include \\.ts$ --exclude \\.spec\\.ts$ --location all",
    "test": "jest",
    "test.watch": "jest --watchAll",
    "commit": "npm run test && npm run build.docs && git add . && lint-staged && npx git-cz",
    "semantic-release": "semantic-release"
  },
  "engines": {
    "node": "^10.15"
  },
  "keywords": [
    "validate",
    "validation"
  ],
  "author": "Anthony Johnston <npm@antix.co.uk> (http://antix.co.uk)",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "npm": "^6.13.7"
  },
  "devDependencies": {
    "@types/jest": "^25.1.1",
    "barrelsby": "^2.2.0",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.1.0",
    "jest": "^25.1.0",
    "lint-staged": "^10.0.6",
    "prettier": "^1.19.1",
    "rollup": "^1.30.1",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-typescript2": "^0.25.3",
    "semantic-release": "^17.0.1",
    "shx": "^0.3.2",
    "ts-jest": "25.1.0",
    "typedoc": "^0.16.9",
    "typescript": "^3.7.5"
  },
  "jest": {
    "preset": "ts-jest",
    "verbose": false,
    "testMatch": [
      "**/*.spec.ts"
    ],
    "moduleNameMapper": {
      "(.*)\\.js": "$1"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,json,  scss,md,ts}": [
      "prettier --write",
      "git add"
    ]
  }
}
